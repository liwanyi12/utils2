{
    "name": "lwi/utils2",
    "description": "ThinkPHP 增强工具库",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Liwanyi\\Utils2\\": "src/"
        },
        "files": ["src/Helpers.php"]
    },
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "suggest": {
        "ext-redis": "需要Redis扩展支持",
        "topthink/think-orm": "用于数据库功能 (^2.0 || ^3.0)",
        "psr/simple-cache": "用于缓存功能 (^1.0 || ^2.0 || ^3.0)"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}